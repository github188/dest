TOP := ..

COMM_DIR := ../../common/linux_compile

SRC_DIR := $(TOP)/source

## Name and type of the target for this Makefile

ARC_TARGET      := commonlib

## Define debugging symbols
DEBUG = 0
LINUX_COMPILER = _HHPPC_
PWLIB_SUPPORT = 0


## Object files that compose the target(s)

SRCS := $(wildcard $(SRC_DIR)/*.cpp)
OBJS := $(patsubst %.cpp,%, $(SRCS))

## Libraries to include in shared object file
        

## Add driver-specific include directory to the search path

INC_PATH += $(TOP)/include ../../../10-common/include/mcu ../../../10-common/include/system ../../../10-common/include/platform ../../../10-common/include/protocol ../../../10-common/include/cbb/protocol ../../common/include ../../../10-common/include/operation

ifeq ($(PWLIB_SUPPORT),1)
   INC_PATH += $(PWLIBDIR)/include/ptlib/unix $(PWLIBDIR)/include
endif

INSTALL_LIB_PATH = ../../../10-common/lib/release/linux_ppc_qoriq_2637

